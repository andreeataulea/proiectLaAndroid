<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".LoginProfesor">

    <EditText
        android:id="@+id/editTextEmailProfesor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#11000000"
        android:ems="10"
        android:layout_marginTop="138dp"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textSize="16dp"
        android:textColorHint="@android:color/white"
        android:layout_alignParentTop="true"
        />

    <EditText
        android:id="@+id/editTextParolaProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#11000000"
        android:layout_below="@+id/editTextEmailProfesor"
        android:ems="10"
        android:hint="Parola"
        android:inputType="textPassword"
        android:textSize="16dp"
        android:layout_marginTop="38dp"
        android:textColorHint="@android:color/white" />
    <CheckBox
        android:id="@+id/checkBoxProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="82dp"
        android:text="Remember me"
        android:textSize="18sp"
        android:layout_below="@+id/editTextParolaProf"
        android:layout_marginTop="38dp"
        android:textColor="@android:color/white" />

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal= "true"
        android:layout_centerVertical="true"
        app:cardBackgroundColor="#dffff29a"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:id="@+id/loginProf"
        android:layout_below="@+id/checkBoxProf"
        android:layout_marginTop="48dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewLogProf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/LogProf"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textViewRegisterProfesor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/loginProf"
        android:text="@string/registerProfesor"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:textStyle="bold"
      />/  android:onClick="ActionRegProf"/>

</RelativeLayout>