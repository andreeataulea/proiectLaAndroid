<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/tvCodAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cod test"
        android:textColor="@android:color/black"
        android:textSize="18dp"
       android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvNumeAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nume test"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/tvCodAdapter"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvTipAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tip test"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/tvNumeAdapter"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvMaterieAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="98dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/tvNumeAdapter"
        android:text="Materie"
        android:textColor="@android:color/black"
        android:textSize="18dp" />
</RelativeLayout>