<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".LoginStudent">


    <EditText
        android:id="@+id/editTextStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#11000000"
        android:ems="10"
        android:layout_marginTop="138dp"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textSize="16dp"
        android:textColorHint="@android:color/white"
        android:layout_alignParentTop="true" />

    <EditText
        android:id="@+id/editTextParolaStud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#11000000"
        android:layout_below="@+id/editTextStudent"
        android:ems="10"
        android:hint="Parola"
        android:inputType="textPassword"
        android:textSize="16dp"
        android:layout_marginTop="38dp"
        android:textColorHint="@android:color/white" />

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="#dffff29a"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:id="@+id/loginStud"
        android:layout_below="@+id/checkBoxStud"
        android:layout_marginTop="38dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewLogStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/logStudent"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="48dp"
        android:text="@string/viewRegister"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_below="@+id/loginStud"/>

    <CheckBox
        android:id="@+id/checkBoxStud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remeber me"
        android:layout_marginTop="38dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="82dp"
        android:textSize="18sp"
        android:layout_below="@+id/editTextParolaStud"
        android:textColor="@android:color/white"/>
</RelativeLayout>